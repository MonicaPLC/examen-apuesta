<body>


 <div class="container">
  <h1>Bid Now!</h1>
  <!---CASA-->
  <div class="card-group">
   <div class="card">
    <img class="card-img-top img" src="/img/casa.jpg" alt="Card image cap">
    <div class="card-body">
     <form action="/guardar_remate" method="POST">
      <input name="producto" type="hidden" value="1">
      <input name="valor" type="number">
      <input type="submit">
     </form>
     <br>
     <div class="card" style="width: 18rem;">
      <div class="card-body">
       <h5 class="card-title">Current bid</h5>

       <%for (let r of remate){%>

        <%=r.name%>


         <%}%>

      </div>
      <input type="search" placeholder="buscar">
     </div>
    </div>
   </div>


   <!--ESCULTURA-->
   <div class="card">
    <img class="card-img-top img" src="/img/escultura.jpg" alt="Card image cap">
    <div class="card-body">
     <form action="/guardar_remate" method="POST">
      <input name="producto" type="hidden" value="2">
      <input name="valor" type="number">
      <input type="submit">
     </form>
     <br>
     <div class="card" style="width: 18rem;">
      <div>
      </div>
      <div class="card-body">
       <h5 class="card-title">Current bid</h5>

       <%for(let r of remate){%>

        <%=r.name%>:
         <%for(let p of r.precios){%>
          <%=p.valor%>

           <%}%>




            <%}%>




      </div>
      <input type="search" placeholder="buscar">
     </div>
    </div>
   </div>

   <!--PINTURA-->
   <div class="card">
    <img class="card-img-top img" name="productoPintura" src="/img/pintura.jpg " alt="Card image cap">
    <div class="card-body">
     <form action="/guardar_remate" method="POST">
      <input name="producto" type="hidden" value="3">
      <input name="valor" type="number">
      <input type="submit">
     </form>
     <br>
     <div class="card" style="width: 18rem;">
      <div class="card" style="width: 18rem;">
       <div class="card-body">
        <h5 class="card-title">Current bid</h5>

        <%for (let r of remate){%>

         <%=r.name%>


          <%}%>

       </div>
       <input type="search" placeholder="buscar">

      </div>
     </div>
    </div>
   </div>
  </div>
  <a class="btn btn-primary" href="/resultado">End Bind</a>
 </div>

